<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="VectorDrawEngineLinux.MainWindow"
        Title="Vector Draw Engine Demo"
        Width="800" Height="600">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                
                <!-- Pan Controls -->
                <Border Background="White" Padding="10" CornerRadius="4" BoxShadow="0 2 4 0 #40000000">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Pan" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,Auto,Auto">
                            <Button Grid.Row="0" Grid.Column="1" Content="Y+" Name="PanYPlus" Width="50" Height="35" Margin="2"/>
                            <Button Grid.Row="1" Grid.Column="0" Content="X-" Name="PanXMinus" Width="50" Height="35" Margin="2"/>
                            <Button Grid.Row="1" Grid.Column="2" Content="X+" Name="PanXPlus" Width="50" Height="35" Margin="2"/>
                            <Button Grid.Row="2" Grid.Column="1" Content="Y-" Name="PanYMinus" Width="50" Height="35" Margin="2"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
             <!-- Zoom Controls -->
<Border Background="White" Padding="10" CornerRadius="4" BoxShadow="0 2 4 0 #40000000">
    <StackPanel>
        <TextBlock Text="Zoom" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
        <Button Content="Zoom In" Name="ZoomIn" Width="80" Height="35" Margin="0,2"/>
        <Button Content="Zoom Out" Name="ZoomOut" Width="80" Height="35" Margin="0,2"/>
        <Button Content="Zoom Fit" Name="ZoomFit" Width="80" Height="35" Margin="0,2"/>
    </StackPanel>
</Border>

                <!-- Rotation Controls -->
<Border Background="White" Padding="10" CornerRadius="4" BoxShadow="0 2 4 0 #40000000">
    <StackPanel Spacing="1">
        <TextBlock Text="Rotation" FontWeight="Bold" HorizontalAlignment="Center"/>
        
        <!-- X Rotation -->
        <StackPanel Spacing="2" Margin="0,2">
            <TextBlock Text="X Axis" FontSize="10" Foreground="Gray"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0" 
                        Height="40"
                        Minimum="-360" 
                        Maximum="360" 
                        Value="0"
                        TickFrequency="45"
                        Margin="0,0,5,0"
                        Name="RotationXSlider"/>
                <TextBlock Grid.Column="1" 
                           Text="0°"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Name="RotationXText"/>
            </Grid>
        </StackPanel>
        
        <!-- Y Rotation -->
        <StackPanel Spacing="2" Margin="0,2">
            <TextBlock Text="Y Axis" FontSize="10" Foreground="Gray"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0" 
                        Height="40"
                        Minimum="-360" 
                        Maximum="360" 
                        Value="0"
                        TickFrequency="45"
                        Margin="0,0,5,0"
                        Name="RotationYSlider"/>
                <TextBlock Grid.Column="1" 
                           Text="0°"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Name="RotationYText"/>
            </Grid>
        </StackPanel>
        
        <!-- Z Rotation -->
        <StackPanel Spacing="2" Margin="0,2">
            <TextBlock Text="Z Axis" FontSize="10" Foreground="Gray"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0" 
                        Height="40"
                        Minimum="-360" 
                        Maximum="360" 
                        Value="0"
                        TickFrequency="45"
                        Margin="0,0,5,0"
                        Name="RotationZSlider"/>
                <TextBlock Grid.Column="1" 
                           Text="0°"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Name="RotationZText"/>
            </Grid>
        </StackPanel>
        
        <!-- Reset Rotation Button -->
        <Button Content="Reset Rotation" 
                Name="ResetRotationButton"
                Height="25" 
                FontSize="10"
                Margin="0,5,0,0"/>
    </StackPanel>
</Border>                
                <!-- File Controls -->
                <Border Background="White" Padding="10" CornerRadius="4" BoxShadow="0 2 4 0 #40000000">
                    <StackPanel Spacing="5">
                        <TextBlock Text="File" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Button Content="Load SVG" Name="LoadFileButton" Width="100" Height="35"/>
                        <Button Content="Save Image" Name="SaveImageButton" Width="100" Height="35" Margin="0,5,0,0"/>
                        <Button Content="Render To Image" Name="RenderToImage" Width="100" Height="35" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Info Display -->
                <Border Background="White" Padding="10" CornerRadius="4" BoxShadow="0 2 4 0 #40000000">
                    <StackPanel Spacing="3">
                        <TextBlock Text="Transform Info" FontWeight="Bold"/>
                        <TextBlock Name="InfoText" Text="Pan: (0, 0) | Zoom: 1.0x | Mouse: (0, 0)"/>
                        <!-- Add rotation info to the display -->
                        <TextBlock Name="RotationInfoText" 
                                   FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Canvas Area -->
        <Border Grid.Row="1" Background="#E8E8E8" BorderBrush="#CCCCCC" BorderThickness="1">
            <Canvas Name="DrawCanvas" Background="White" ClipToBounds="True">
                <!-- Your vector drawing will be rendered here -->
            </Canvas>
        </Border>
    </Grid>
</Window>